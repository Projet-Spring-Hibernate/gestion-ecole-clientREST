<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>14_ClientWS-rest_gestion-ecole</display-name>
	
		<!-- ========== CHARGEMENT DES FICHIERS DE CONFIGURATION DES BEANS DE SPRING 
		=== -->

	<!-- Ecouteur de servlet -->

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- emplacement des fichiers -->

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/springapp-servlet.xml
					/WEB-INF/applicationContext.xml

					</param-value>
	</context-param>

	<!-- ====================================================== -->
	<!-- ========== DECLARATION SERVLET SPRING MVC ============ -->
	<!-- ====================================================== -->

	<servlet>
		<servlet-name>springapp</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>

		<servlet-name>springapp</servlet-name>
		<url-pattern>/</url-pattern> 
	</servlet-mapping>




	<!-- ================================================= -->
	<!-- ========== PAGE DE DEMARAGE DE L'APP ============ -->
	<!-- ================================================= -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>